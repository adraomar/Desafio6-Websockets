<div>
    <h1>Pagina HOME</h1>
    <form method="POST" action="/productos" id="productForm">
        <label>Titulo</label>
        <input name="title" id="title" />
        <label>Precio</label>
        <input name="price" id="price" />
        <label>Imagen</label>
        <input name="thumbnail" id="thumbnail" />
        <button type="submit">Guardar</button>
    </form>
</div>

<hr>
<div id="productsContainer"></div>

